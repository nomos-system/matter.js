{
    "name": "matter.js-monorepo",
    "private": true,
    "workspaces": [
        "packages/tools",
        "packages/testing",
        "packages/general",
        "packages/model",
        "packages/types",
        "packages/protocol",
        "packages/node",
        "packages/matter.js",
        "packages/nodejs",
        "packages/nodejs-ble",
        "packages/mqtt",
        "packages/main",
        "packages/nodejs-shell",
        "packages/examples",
        "packages/create",
        "packages/react-native",
        "packages/cli-tool",
        "packages/nodejs-ws",
        "support/models",
        "support/codegen",
        "support/chip-testing",
        "support/tests"
    ],
    "scripts": {
        "prepare": "npm run build-clean",
        "clean": "node packages/tools/bin/build.js clean",
        "build": "node packages/tools/bin/build.js",
        "version": "node packages/tools/bin/version.js",
        "build-clean": "node packages/tools/bin/build.js --clean",
        "build-doc": "node packages/tools/bin/build.js docs",
        "device-air-quality-sensor": "matter-run packages/examples/src/device-air-quality-sensor/AirQualitySensorDeviceNode.ts",
        "device-composed-wc-light": "matter-run packages/examples/src/device-composed-wc-light/IlluminatedRollerShade.ts",
        "device-measuring-socket": "matter-run packages/examples/src/device-measuring-socket/MeasuredSocketDevice.ts",
        "device-multiple-onoff": "matter-run packages/examples/src/device-multiple-onoff/MultiDeviceNode.ts",
        "device-onoff": "matter-run packages/examples/src/device-onoff/DeviceNode.ts",
        "device-onoff-advanced": "matter-run packages/examples/src/device-onoff-advanced/DeviceNodeFull.ts",
        "device-onoff-light": "matter-run packages/examples/src/device-onoff-light/LightDevice.ts",
        "device-sensor": "matter-run packages/examples/src/device-sensor/SensorDeviceNode.ts",
        "device-simple": "matter-run packages/examples/src/device-simple/main.ts",
        "device-smoke-co-alarm": "matter-run packages/examples/src/device-smoke-co-alarm/SmokeCOAlarmDeviceNode.ts",
        "test": "matter-test -w",
        "lint": "eslint",
        "lint-fix": "eslint --fix",
        "format": "prettier --write \"packages/**/*.ts\" \"support/codegen/**/*.ts\" \"support/chip-testing/**/*.ts\"",
        "format-verify": "prettier --check \"packages/**/*.ts\" \"support/codegen/**/*.ts\" \"support/chip-testing/**/*.ts\"",
        "matter-bridge": "matter-run packages/examples/src/device-bridge-onoff/BridgedDevicesNode.ts",
        "matter-controller": "matter-run packages/examples/src/controller/ControllerNode.ts",
        "matter-device": "npm run device-onoff",
        "generate-spec": "matter-run --max-old-space-size=6144 support/codegen/bin/generate-spec.js",
        "generate-chip": "matter-run support/codegen/bin/generate-chip.js",
        "generate-model": "matter-run support/codegen/bin/generate-model.js",
        "generate-clusters": "matter-run support/codegen/bin/generate-clusters.js",
        "generate-endpoints": "matter-run support/codegen/bin/generate-endpoints.js",
        "generate-forwards": "matter-run support/codegen/bin/generate-forwards.js",
        "generate-vscode": "matter-run support/codegen/bin/generate-vscode.js",
        "shell": "matter-run packages/nodejs-shell/src/app.ts",
        "relock": "node packages/tools/bin/relock.js && npm install",
        "cycles": "matter-build cycles"
    },
    "devDependencies": {
        "@eslint/compat": "^2.0.0",
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.1",
        "@typescript-eslint/eslint-plugin": "^8.49.0",
        "@typescript-eslint/parser": "^8.49.0",
        "c8": "^10.1.3",
        "embedme": "^1.22.1",
        "eslint-plugin-node-import": "^1.0.5",
        "eslint-plugin-regexp": "^2.10.0",
        "globals": "^16.5.0",
        "prettier": "^3.7.4",
        "prettier-plugin-organize-imports": "^4.3.0",
        "semver": "^7.7.3",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.49.0"
    },
    "overrides": {
        "brorand": "npm:@matter.js/brorand@1.1.0"
    },
    "dependencies": {
        "memlab": "^1.1.60"
    }
}
